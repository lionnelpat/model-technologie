# ===========================
# ENVIRONNEMENT
# ===========================
NODE_ENV=development
JAVA_ENV=dev

# ===========================
# FRONTEND (React)
# ===========================
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_ENV=development

# ===========================
# BACKEND (Spring Boot)
# ===========================
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# DATABASE
DB_HOST=postgres
DB_PORT=5432
DB_NAME=model_tech_db
DB_USER=postgres
DB_PASSWORD=mtech_db_password
DB_POOL_SIZE=10

# JPA/Hibernate
JPA_HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_HIBERNATE_FORMAT_SQL=true

# JWT (À GÉNÉRER - voir section Secrets)
JWT_SECRET=your-super-secret-key-minimum-32-characters-long
JWT_EXPIRATION=86400000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================
# DATABASE (PostgreSQL)
# ===========================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mtech_db_password
POSTGRES_DB=model_tech_db
POSTGRES_INITDB_ARGS=-c max_connections=200

# ===========================
# MONITORING & LOGGING
# ===========================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Dozzle (Port pour voir les logs)
DOZZLE_PORT=8888

# Adminer (Port pour gérer la BDD)
ADMINER_PORT=8080

# ===========================
# DOCKER
# ===========================
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=lionnelpat
DOCKER_TOKEN=your-github-token-here

# ===========================
# SMTP (pour emails futurs)
# ===========================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@model-technologie.com

# ===========================
# DOMAIN
# ===========================
APP_DOMAIN=model-technologie.com
APP_URL=https://model-technologie.com

# ===========================
# SENTRY (Error tracking optionnel)
# ===========================
SENTRY_DSN=
